@model List<Employee>
@{
}

<h2 class="text-center mb-5">List of Employees</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Employees" asp-action="Create">Add New Employee</a>
    </div>
    <div class="col">

    </div>
</div>



<table class="table">
    <thead>
        <tr>
            <th>EmployeeID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Department</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Employees" asp-action="Edit"
                        asp-route-id="@employee.EmployeeID">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Employees" asp-action="Delete"
                       asp-route-id="@employee.EmployeeID" onclick="return confirm('This will Delete remove this Employee')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>