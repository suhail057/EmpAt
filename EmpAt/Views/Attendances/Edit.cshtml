@model AttendanceDto
@{
}


<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Edit Attendance</h2>


        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["AttendanceID"]">
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">EmployeeID</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EmployeeID">
                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Date</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Date" type="Date">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">CheckInTime</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="CheckInTime" type="time">
                    <span asp-validation-for="CheckInTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">CheckOutTime</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="CheckOutTime" type="time">
                    <span asp-validation-for="CheckOutTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Attendances" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>